<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.minipos.controller.LoginController"
           prefHeight="600.0" prefWidth="800.0">

    <VBox alignment="CENTER" spacing="20" maxWidth="400" maxHeight="350" styleClass="login-container">
        <Label text="MiniPOS Login" styleClass="login-title"/>
        
        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Username"/>
            <TextField fx:id="usernameField" promptText="Enter username"/>
        </VBox>
        
        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Password"/>
            <PasswordField fx:id="passwordField" promptText="Enter password"/>
        </VBox>
        
        <Label fx:id="errorLabel" textFill="red" visible="false"/>
        
        <Button text="Login" onAction="#handleLogin" styleClass="button-primary" maxWidth="Infinity"/>
    </VBox>

</StackPane>
